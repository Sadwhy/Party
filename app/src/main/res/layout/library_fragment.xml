<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/library_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Header: profile pic, username, more -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_filled"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Profile" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HardcodedUser"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_filled"
                    android:contentDescription="More" />
            </LinearLayout>

            <!-- Post text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hereâ€™s a hardcoded post description with some sample content to preview the layout visually."
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Image grid -->
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="stretch">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_flexGrow="1"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home_filled" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_flexGrow="1"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home_filled" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_flexGrow="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home_filled" />
            </com.google.android.flexbox.FlexboxLayout>

            <!-- Like/comment bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_filled"
                    android:contentDescription="Like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:layout_marginStart="6dp"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_home_filled"
                    android:contentDescription="Comment" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>